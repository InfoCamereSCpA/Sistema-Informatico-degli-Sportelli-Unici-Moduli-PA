    <!-- AS-IS: SuperficieEsercizioAttivitaBaseType su SUAP_modulo_lavanderie.xsd -->
    <xsd:complexType name="superficie_esercizio_attivita_base_type" abstract="true"/>

    <xsd:complexType name="superficie_esercizio_attivita_ctype">
        <xsd:complexContent>
            <xsd:extension base="elavape:superficie_esercizio_attivita_base_type">
                <xsd:sequence>
                    <xsd:element name="tintolavanderia_lavanderia" type="xsd:double" minOccurs="0" />
                    <xsd:element name="altri_usi" type="xsd:double" minOccurs="0"/>
                    <xsd:element name="complessiva" type="xsd:double" minOccurs="0" />
                </xsd:sequence>
            </xsd:extension>
        </xsd:complexContent>
    </xsd:complexType>


    <xsd:element name="lavanderia_apertura" type="elavape:lavanderie_apertura_ctype"/>
</xsd:schema>
    